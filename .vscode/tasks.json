{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "PRO1: compila l'arxiu actual",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: g++"
		}
	]
}